{
  "xsappname": "salesdetails",
  "scopes": [
    {
      "name": "$XSAPPNAME.Display",
      "description": "display"
    },
    {
      "name": "$XSAPPNAME.Edit",
      "description": "edit"
    },
    {
      "name": "$XSAPPNAME.Viewer",
      "description": "Viewer"
    },
    {
      "name": "$XSAPPNAME.Editor",
      "description": "Editor"
    }
  ],
  "attributes": [
    {
      "name": "Country",
      "description": "Country",
      "valueType": "string"
    }
  ],
  "role-templates": [
    {
      "name": "Viewer",
      "description": "Access Read-Only data",
      "default-role-name": "Viewer: Authorized to Read All data",
      "scope-references": [
        "$XSAPPNAME.Display"
      ],
      "attribute-references": [
        {
          "name": "Country",
          "default-values": [
            "USA"
          ]
        }
      ]
    },
    {
      "name": "Editor",
      "description": "Edit the Sales order",
      "scope-references": [
        "$XSAPPNAME.Edit"
      ]
    }
  ],
  "authorities": [
    "$ACCEPT_GRANTED_AUTHORITIES"
  ],
  "oauth2-configuration": {
    "token-validity": 900,
    "redirect-uris": [
      "https://*.cfapps.us10-001.hana.ondemand.com/login/callback"
    ]
  },
  "xsenableasyncservice": "true"
}
