{
    "welcomeFile": "managesales/webapp/index.html",
    "authenticationMethod": "route",
    "sessionTimeout": 100,
    "routes": [
        {
            "source": "^/managesales/(.*)",
            "target": "$1",
            "localDir": "managesales/",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/webapp/(.*)",
            "target": "$1",
            "localDir": "webapp/",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/(.*)$",
            "destination": "srv-api",
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/(.*)$",
            "destination": "srv-api",
            "authenticationType": "xsuaa"
        }
    ],
    "logout": {
        "logoutEndpoint": "/logout",
        "logoutPage": "https://account.hana.ondemand.com/#/home/welcome"
    }
}